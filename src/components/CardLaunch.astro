---
interface Props {
    id: string
    img: string
    success: boolean 
    flightNumber: number
    details: string | null
}
const { success, flightNumber, img, id, details} = Astro.props
const launchStatus = success ? "Success" : 'Failed'
---

<div class=" flex flex-col bg-gray-500 shadow-2xl hover:scale-105 ease-in duration-150 rounded-lg">
    <picture class=" flex justify-center p-4">
        <img class="mb-5" src={img} alt={`Badge for lunch ${id}`}>
    </picture>

    <header class=" p-4 flex-grow">
<span class:list={[
    "text-xs font-semibold mr-2 px-2 py-1 rounded",
    {
        "bg-green-400 text-green-900" : success,
        "bg-red-400 text-red-900" : !success
    }
]}>
{launchStatus}
</span>

        <h2 class=" my-2 text-2xl font-bold text-white">Flight #: {flightNumber}</h2>

        <p class="mb-4 font-light text-gray-300">{
        details != null && details?.length >100 ? details.slice(0,100) + '...' : details 
        }
        </p>
    </header>

</div>